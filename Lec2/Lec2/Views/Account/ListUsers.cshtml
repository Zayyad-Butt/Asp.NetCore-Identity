@model IEnumerable<ApplicationUser>
@{
    ViewBag.Title = "All Users";
}
<h1>All Users</h1>
<a class="btn btn-primary mb-3" style="width:auto"
   asp-controller="Account" asp-action="Register">
    Add new user

</a>
@if (Model.Any())
{
    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id: @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                   @user.UserName
                </h5>
                <form asp-action="DeleteUsers" asp-route-id="@user.Id" method="post">
                    <div class="card-footer">

                        <a asp-action="AssignClaims" asp-route-userId="@user.Id" class="btn btn-primary">
                            Add Claim to User
                        </a>

                    </div>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No user added yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create user
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Account" asp-action="Register">
                Add new user

            </a>
        </div>
    </div>
}

